<udebs>

<config>
    <name>World MAP</name>
</config>


<!-- definitions -->
<definitions>
    <stats>
        <ACT />
        <SPD />
        <LVL />
    </stats>

    <strings>
        <sprite />
    </strings>

    <lists>
        <status rlist="" />
    </lists>
</definitions>

<map>
    <dim>
        <x>8</x>
        <y>8</y>
    </dim>
</map>

<entities>
<!--    Scripts-->
    <tick>
        <effect>
            <i>CAST (ALL mob) random_travel</i>
            <i>update</i>
            <i>hero CAST (ALL mob) check_battle</i>
            <i>hero CAST (ALL onboard) check_treasure</i>
            <i>hero CAST goal check_goal</i>
            <i>hero CAST boss check_boss</i>
        </effect>
    </tick>

    <init>
        <effect>
            <i>CHANGE recruiter ACT 4</i>
            <i>treasure TRAVEL ((DICE.5 + 2)  (DICE.5 + 2))</i>
            <i>GETS treasure group onboard</i>
            <i>hero TRAVEL (0 0)</i>
            <i>goal TRAVEL (7 7)</i>
            <i>CAST recruiter boss_recruit</i>
            <i>CAST recruiter recruit</i>
            <i>update</i>
        </effect>
    </init>

    <finish>
        <effect>
            <i>CHANGE recruiter LVL 1</i>
            <i>CHANGE recruiter ACT (STAT recruiter LVL)</i>
            <i>CAST (ALL mob) KO</i>
            <i>update</i>
        </effect>
    </finish>

<!-- Events -->
    <recruit>
        <effect>
            <i>CAST ((DICE.5 + 2) (DICE.5 + 2)) recruit_chain</i>
            <i>CAST recruiter recruit</i>
        </effect>
        <require>(STAT recruiter ACT) &gt;= 1</require>
    </recruit>

    <recruit_chain>
        <require>NAME.$T == empty</require>
        <effect>
            <i>CHANGE recruiter ACT -1</i>
            <i>new = (RECRUIT baddie $T)</i>
            <i>GETS $new group mob</i>
        </effect>
    </recruit_chain>

    <walk>
        <require>
            <i>(DISTANCE pinf) &lt;= 1</i>
            <i>NAME.$T == empty</i>
        </require>
        <effect>TRAVEL $T</effect>
    </walk>

    <random_travel>
        <effect>
            <i>random_space = ((+ XLOC.$T DICE.2 -1) (+ YLOC.$T DICE.2 -1))</i>
            <i>$T CAST $random_space walk</i>
        </effect>
    </random_travel>

    <hero_travel>
        <effect>
            <i>soundFX step</i>
        </effect>
        <group>walk</group>
    </hero_travel>

    <KO>
        <require>
            <i>mob in STAT.$T.group</i>
            <i>NAME.$T != baddie</i>
        </require>
        <effect>
            <i>$target TRAVEL bump</i>
            <i>LOSES $T group mob</i>
            <i>GETS $T status $move</i>
        </effect>
    </KO>

    <boss_recruit>
        <require>(STAT recruiter LVL) == 2</require>
        <effect>boss TRAVEL (7 7)</effect>
    </boss_recruit>

<!--Event Checks-->
    <checks>
        <require>(DISTANCE pinf) &lt;= 1</require>
    </checks>

    <check_battle>
        <effect>
            <i>message Battle!!!</i>
            <i>battle monster</i>
            <i>message You win!!</i>
            <i>CAST $T KO</i>
            <i>update</i>
            <i>new = (getitem)</i>
            <i>message Got $new</i>
            <i>update</i>
        </effect>
        <group>checks</group>
    </check_battle>

    <check_treasure>
        <effect>
            <i>soundFX pickup</i>
            <i>new = (getitem)</i>
            <i>treasure TRAVEL bump</i>
            <i>CLEAR treasure group</i>
            <i>message Got $new</i>
            <i>update</i>
        </effect>
        <group>checks</group>cd
    </check_treasure>

    <check_goal>
        <effect>
            <i>message GOAL!!!</i>
            <i>new = (getitem)</i>
            <i>message Got $new</i>
            <i>update</i>
            <i>CAST empty finish</i>
            <i>CAST empty init</i>
            <i>battle_finish</i>
        </effect>
        <group>checks</group>
    </check_goal>

    <check_boss>
        <effect>
            <i>message Boss fight!!</i>
            <i>battle boss</i>
            <i>message You Win!!</i>
            <i>exit</i>
        </effect>
        <group>checks</group>
    </check_boss>

    <!-- Unit Groups-->
    <mob />
    <onboard />

    <!-- clonables -->
    <baddie>
        <sprite>I</sprite>
    </baddie>

    <!-- units -->
    <recruiter />

    <hero>
        <sprite>X</sprite>
    </hero>

    <goal>
        <sprite>E</sprite>
    </goal>

    <treasure>
        <sprite>T</sprite>
    </treasure>

    <boss>
        <sprite>B</sprite>
    </boss>

</entities>
</udebs>
