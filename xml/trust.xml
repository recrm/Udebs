<udebs>

<config>
     <logging>False</logging>
    <name>Trust</name>
</config>

<definitions>
    <stats>
        <score />
    </stats>
    <lists>
        <options />
    </lists>
</definitions>

<config>
    <version>2</version>
</config>

<entities>
    <tick>
        <effect>
            <i>INIT play</i>
            <i>INIT end</i>
        </effect>
        <options>
            <i>cheat</i>
            <i>cooperate</i>
        </options>
    </tick>

    <play>
        <effect>
            <i>a = (HUMAN)</i>
            <i>b = (COMPUTER)</i>
            <i>human score += LOOKUP.$a.$b</i>
            <i>computer score += LOOKUP.$b.$a</i>
        </effect>
    </play>

    <end>
        <require>STAT.envtime >= LOOKUP.timer</require>
        <effect>EXIT</effect>
    </end>

    <!-- Players -->
    <human />

    <computer />
</entities>

</udebs>
