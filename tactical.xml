<udebs>

<!-- definitions -->

<strings>
    <item>sprite</item>
</strings>

<stats>
    <item>MVE</item>
</stats>

<init>
    <item>empty CAST reset</item>
</init>


<entities>

<!-- Status and chaincasts -->
<entity>
    <ID>reset</ID>
    <effect>
        <item>hero CHANGE MVE ( - hero MVE + 2 )</item>
        <item>recruiter CHANGE MVE ( - recruiter MVE + 5 )</item>
        <item>hero CAST reset DELAY 1</item>
    </effect>
</entity>

<entity>
    <ID>damage</ID>
    <effect>
        <item>TARGET GETS status KO</item>
        <item>TARGET BUMP</item>
    </effect>
    <require>
        <item>TARGET != hero</item>
    </require>
</entity>

<entity>
    <ID>KO</ID>
</entity>

<!-- Moves -->

<entity>
    <ID>AOE</ID>
    <effect>
        <item>TARGET CAST damage</item>
        <item>LOCATION ( TARGET POSITION x +1 , TARGET POSITION y ) CAST damage</item>
        <item>LOCATION ( TARGET POSITION x -1 , TARGET POSITION y ) CAST damage</item>
        <item>LOCATION ( TARGET POSITION x , TARGET POSITION y +1 ) CAST damage</item>
        <item>LOCATION ( TARGET POSITION x , TARGET POSITION y -1 ) CAST damage</item>
        <item>CASTER CHANGE ACT -1</item>
    </effect>
    <require>
        <item>DISTANCE p1 &lt;= 3</item>
        <item>CASTER ACT &gt;=1</item>
    </require>
</entity>

<entity>
    <ID>recruit</ID>
    <effect>
        <item>baddie RECRUIT ( TARGET POSITION x , TARGET POSITION y )</item>
        <item>recruiter CHANGE MVE -1</item>
    </effect>
    <require>
        <item>TARGET == empty</item>
        <item>recruiter MVE >=1</item>
    </require>
</entity>

<entity>
    <ID>travel</ID>
    <require>
        <item>TARGET == empty</item>
        <item>BLOCK x</item>
        <item>CASTER MVE &gt;= DISTANCE p1</item>
    </require>
    <effect>
        <item>CASTER CHANGE MVE - DISTANCE p1</item>
        <item>TRAVEL</item>
    </effect>
</entity>

</entities>

<units>
<!-- clonables -->

<unit active="active">
    <ID>baddie</ID>
    <sprite>B</sprite>
</unit>

<!-- off board units -->
<unit>
    <ID>recruiter</ID>
    <movelist>
        <item>recruit</item>
    </movelist>
</unit>

<!-- on board units -->

<unit actove='active' tick='tick'>
    <ID>hero</ID>
    <sprite>H</sprite>
    <stats>
        <ACT>1</ACT>
        <SPD>1</SPD>
    </stats>
    <movelist>
        <item>travel</item>
        <item>AOE</item>
    </movelist>
</unit>
                
</units>

<MAP>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, hero, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
    <row>empty, empty, empty, empty, empty, empty, empty, empty</row>
</MAP>

</udebs>
